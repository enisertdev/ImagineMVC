@using System.Security.Claims
@model AmountViewModel

@{
    ViewData["Title"] = "My Wallet";
}


<h2>My Wallet</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<form method="post" asp-action="AddAmount" class="p-4 bg-light border rounded">
    <div class="mb-3">
        <label for="amount" class="form-label">Eklemek İstediğiniz Miktar (TL):</label>
        <input type="number" class="form-control" id="amount" name="amount" asp-for="Amount" required>
    </div>
    <input type="hidden" asp-for="Email" value ="@User.FindFirstValue(ClaimTypes.Email)"/>
    <button type="submit" class="btn btn-primary">Para Ekle</button>
</form>