@model UserDtoForUpdate

<form method="post" class="p-4 bg-light border rounded shadow-sm">
    <div class="container mt-3">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Success!</strong> @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="form-group mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter your name" id="name">
        </div>

        <div class="form-group mb-3">
            <label for="phone" class="form-label">Phone Number</label>
            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Enter your phone number" id="phone">
        </div>

        <div class="form-group mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" asp-for="UserName" placeholder="Enter your username" id="username">
        </div>

        <div class="form-group mb-3">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" placeholder="Enter your address" id="address">
        </div>

        <div class="form-group mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="Enter your email" id="email" readonly>
        </div>

        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </div>
</form>

<style>
    body {
        background-color: #f8f9fa;
        margin-top: 20px;
    }

    .form-label {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 0.5rem;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1rem;
        padding: 0.5rem;
        border-radius: 0.5rem;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .alert {
        border-radius: 0.5rem;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .bg-light {
        background-color: #ffffff !important;
    }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>
